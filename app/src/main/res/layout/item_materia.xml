<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/card_view_ticket"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/fondo_transparente"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="140dp"
    android:layout_margin="12dp"
    android:padding="4dp"
    card_view:cardBackGroudColor="#000000"
    card_view:cardElevation="6dp"
    card_view:contentPaddind="4dp"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    >
    <LinearLayout
        android:id="@+id/colorMateriaLayout"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_marginTop="100dp"
        android:background="@color/black"
        android:orientation="vertical"/>
    <RelativeLayout
        android:id="@+id/MateriaLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#D9D9D9"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/nombreMateriaLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--Nombre materia-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/botonesLayout"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingTop="30dp">
            <!--Botones-->

            <TextView
                android:id="@+id/nombreMateriaCardID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Materia"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/referenciaMateriaCardID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:visibility="gone" />

            <TextView
                android:id="@+id/descripcionMateriaCardID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:visibility="gone" />

        </LinearLayout>

        <Button
            android:id="@+id/btnEditarMateria"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="230dp"
            android:background="@drawable/lapiz_edicion"
            android:text="" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>